<% @worklogs.each do |worklog| %>

    <p class="author"><%= user_url worklog.author %> </p>

    <div class="wiki">

      <table width="100%">
        <tr>
          <td width="50%"><b>Today’s Activities</b></td>
          <td width="50%"><b>Tomorrow’s Activities</b></td>
        </tr>
        <tr>
          <td><%= textilizable(worklog.today) %></td>
          <td><%= textilizable(worklog.tomorrow) %></td>
        </tr>
        <tr>
          <td colspan=2><b>Closed Activities</b></td>
        </tr>
        <tr>
          <td COLSPAN=3>
            <%= textilizable(worklog.closed) %>
          </td>
        </tr>
      </table>

    </div>
<% end %>
</br>
<%= textilizable(Setting.plugin_worklogs['WORKLOGS_MAIL_FOOTER']) %>
